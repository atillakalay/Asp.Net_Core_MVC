@model List<ProductListComponentViewModel>

<a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index">Ürünlere Git</a>
<table class="table table-success table-striped">
    <thead>
    <tr>

        <th>İsim</th>
        <th>Açıklama</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>