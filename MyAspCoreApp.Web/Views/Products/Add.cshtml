@{
    ViewData["Title"] = "Add";
}
@model Product

<h1>Ürün Ekleme</h1>
<form asp-controller="Products" asp-action="Add" method="post">
    <label>Ürün Ad:</label>
    <input type="text" asp-for="Name" />
    <br />
    <label>Ürün Fiyat:</label>
    <input type="text" asp-for="Price" />
    <br />
    <label>Ürün Stok:</label>
    <input type="number" asp-for="Stock" />
    <br />
    <label>Ürün Renk:</label>
    <input type="text" asp-for="Color" />
    <button type="submit">Ürün Kaydet</button>
</form>

