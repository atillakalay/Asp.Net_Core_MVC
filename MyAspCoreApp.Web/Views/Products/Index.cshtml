@{
    ViewData["Title"] = "Index";
}
@model List<ProductViewModel>

@if (TempData["status"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["status"]
    </div>
}

<h1>Ürünler</h1>
<a asp-action="Add" asp-controller="Products">Ürün Ekle</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Renk</th>
            <th>Açıklama</th>
            <th>Stok</th>
            <th>Yayınlansın mı?</th>
            <th>Yayın Süresi</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Color</td>
                <td>
                    <text>@item.Description...</text>
                </td>
                <td>@item.Stock</td>
                <td>
                    @if (@item.IsPublished)
                    {
                        <text>Evet</text>
                    }
                    else
                    {
                        <text>Hayır</text>
                    }
                </td>
                <td>@item.Expire</td>
                <td><a asp-action="Remove" asp-controller="Products" asp-route-id="@item.Id">Sil</a></td>
                <td><a asp-action="Update" asp-controller="Products" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>
        }


    </tbody>
</table>

